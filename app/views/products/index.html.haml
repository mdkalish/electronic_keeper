#wrapper
  #sidebar-wrapper.col-lg-1
    #sidebar{ :style => "overflow-y: auto;"}
      .nav.list-group#left-sidebar
        = render 'layouts/left_sidebar'
  #main-wrapper.col-lg-5
    #main
      = render 'categories/show_category'
  #main-wrapper.col-lg-6
    .current-tickets
      .btn-group.pull-right
        .btn#delivery-button
          = button_to 'Na wynos', update_ticket_path(:delivery => "toggle"), remote: true
        .btn
          = button_to 'To wszystko', create_ticket_path, remote: true
      #current-ticket-summary
      %table.table.table-hover.table-bordered
        %th.col-lg-1= "Usuń"
        %th.col-lg-5= "Produkt"
        %th.col-lg-2= "Cena za szt."
        %th.col-lg-2= "Ilość"
        %th.col-lg-2= "Cena w sumie"
        %tbody#current-ticket
          = render 'tickets/show_ticket'
    .current-tickets
      %table.table.table-hover.table-bordered
        %th.col-lg-1= "Nr zamówienia"
        %th.col-lg-1= "Status"
        %th.col-lg-2= "Odbiór"
        %th.col-lg-2= "Kiedy przyjęto"
        %th.col-lg-1= "sum / uniq"
        %th.col-lg-1= "Kwota"
        %th.col-lg-3{:colspan => "3"}= "Akcje"
        %tbody#current-tickets
          = render 'tickets/current_tickets'

