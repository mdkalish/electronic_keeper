<% if @ticket.ticket_items.count == 0 %>
  $('#current-ticket').empty();
  $('#delivery-button').css('visibility', 'hidden');
  $('#current-ticket-summary').empty();
<% else %>
  $('#current-ticket').html('<%= j render("tickets/show_ticket") %>');
  $('#current-ticket-summary').html('<%= current_ticket_summary(@ticket) %>');
  $('#open-tickets').html('<%= total_tickets("open") %>');
  $('#delivery-button').css('visibility', 'visible').find('input').attr('value', '<%= @ticket.translate_delivery %>');
<% end %>
