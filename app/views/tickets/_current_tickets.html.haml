%table.table.table-hover.table-bordered
  %th.col-lg-1= "Nr zamówienia"
  %th.col-lg-2= "Odbiór"
  %th.col-lg-2= "Kiedy przyjęto"
  %th.col-lg-1= "Produktów"
  %th.col-lg-1= "Kwota"
  %th.col-lg-4{:colspan => "3"}= "Akcje"
  - @tickets.each do |ticket|
    %tr
      %td
        = ticket.id
      %td
        = ["Na miejscu", "Na wynos"].sample
      %td
        = ticket.created_at.strftime('%H:%M')
      %td
        = ticket.items_count
      %td
        = ticket.total_price
      %td
        = link_to "Anuluj", '#'
      %td
        = link_to "Szczegóły", '#'
      %td
        = link_to "Zamknij", '#'
