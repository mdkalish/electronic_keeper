- @tickets.reverse.each do |t|
  %table.table.history-table
    %thead
      %tr
        %th.col-lg-1= "Date(ID)"
        %th.col-lg-1= "Todays Nr"
        %th.col-lg-1= "User Name"
        %th.col-lg-1= "Underwayed At"
        %th.col-lg-1= "Closed At"
        %th.col-lg-1= "Served After"
        %th.col-lg-1= "To Be Served At"
        %th.col-lg-1= "Status"
        %th.col-lg-2= "Delivery"
        %th.col-lg-1= "Items Count"
        %th.col-lg-1= "Total Price"
    %tbody
      %tr.ticket
        %td= "#{t.created_at.to_date} (#{t.id})"
        %td= t.todays_nr
        %td= t.user.name
        - if t.underwayed_at
          %td= t.underwayed_at.strftime('%H:%M')
        - else
          %td= t.underwayed_at
        - if t.closed_at
          %td= t.closed_at.strftime('%H:%M')
          %td= t.time_in_production
        - else
          %td= "Not yet closed"
          %td= "Not yet closed"
        %td= t.to_be_served_at
        %td= t.status
        %td= t.delivery
        %td= t.items_count
        %td= t.total_price
      %tr.ticket-item
        %th{colspan: 3}= "Product name"
        %th{colspan: 2}= "(Debug Data)"
        %th{colspan: 3}= "Product Unit Price"
        %th= "Amount"
        %th{colspan: 2}= "Amount * Unit Price"
      - t.ticket_items.each do |ti|
        %tr
          %td{colspan: 3}= ti.product.name
          %td{colspan: 2}=  "(TIID: #{ti.id} PID: #{ti.product_id})"
          %td{colspan: 3}= ti.product.price
          %td= ti.amount
          %td{colspan: 2}= ti.product.price * ti.amount
      %tr.bottom-row
        %td{colspan: 12}
